      var  prezzo = 17000;
      var  iva = 0.22;
      var  scontofattura = 0.10;
      var  valoreiva = prezzo * iva;
      var  sconto = prezzo * scontofattura;
      var  prezzototale = prezzo + valoreiva - sconto;

      

      document.write ("prezzo comprensivo di iva: " + valoreiva+ "€<br>" )
      document.write ("prezzo scontato senza iva:" + sconto + "€<br>")
      document.write ( "prezzo totale macchina:" + prezzototale + "€" )
    
